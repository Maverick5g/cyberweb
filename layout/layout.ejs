<!DOCTYPE html>
<html>
<head>
    <title><%- theme.title %></title>
    <meta charset="utf-8">

    <!-- 引入配置文件 -->
    <%- css('https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/css/bootstrap.min.css') %>
    <%- css('css/main.css') %>
    <!-- 代码高亮库 -->
    <%- css('lib/highlight/styles/atom-one-dark') %>
</head>
<body>
<div id="main">
    <!-- 引入导航 -->
    <nav>
        <%- include('nav.ejs') %>
    </nav>
    <div class="container-fluid" id="nav-tabContent" style="padding-top: 30px">
        <div class="tab-pane fade show active" id="nav-message" role="tabpanel" aria-labelledby="nav-home-tab">
            <div class="row center-box">
                <div class="col-1"></div>
                <!-- 引入侧边栏 -->
                <div class="col-3 message-title-box">
                    <aside id="#aside">
                        <%- include('aside.ejs') %>
                    </aside>
                </div>
                <!-- 引入正文 -->
                <div class="col-7 content-box">
                    <%- body %>
                </div>
                <div class="col-1"></div>
            </div>
        </div>
    </div>
</div>

<!-- 引入 js 文件 -->
<%- js('js/main.js') %>
!-- 引入代码高亮的 js -->
<%- js('lib/highlight/highlight.pack.js') %>
<script>hljs.initHighlightingOnLoad();</script>
</body>
</html>